<div class="col-lg-12">
    <div class="container card mt-5 mb-5">
        <div class="card-body">
            <h2 class="text-center"> Create New Employee </h2>
        </div>
    </div>

    <%= form_with model: @emp do |form| %>
        <div class="row container">
            <div class="col-lg-4">
                <div class="form-group">
                    <%= form.label :first_name, class: 'mb-2' %>
                    <%= form.text_field :first_name, class: 'form-control form-control-lg'%>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    <%= form.label :middle_name, class: 'mb-2' %>
                    <%= form.text_field :middle_name, class: 'form-control form-control-lg'%>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    <%= form.label :last_name, class: 'mb-2' %>
                    <%= form.text_field :last_name, class: 'form-control form-control-lg'%>
                </div>
            </div>


            <div class="col-lg-4">
                <div class="form-group">
                    <%= form.label :email, class: 'mb-2' %>
                    <%= form.text_field :email, class: 'form-control form-control-lg'%>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    <%= form.label :phone, class: 'mb-2' %>
                    <%= form.text_field :phone, class: 'form-control form-control-lg'%>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 m-5">
                <%= form.submit class: 'btn btn-primary' %>
                <%= link_to "Back to Employee", emps_path, class: "btn btn-outline-primary" %>
            </div>
        </div>
    <% end %>
</div>