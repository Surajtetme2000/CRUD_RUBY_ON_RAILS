<div class="col-lg-12">
    <div class="container card mt-5 mb-5">
        <div class="card-body">
            <h2 class="text-center"> Employee Details</h2>
            <div class="row">
                <div class="col-lg-6">
                    <h3 class="text-center">Personal Information</h3>
                    <p class="lead"><strong> First Name :</strong> <%= @emp.first_name%></p>
                    <p class="lead"><strong> Middle Name :</strong> <%= @emp.middle_name%></p>
                    <p class="lead"><strong> Last Name :</strong> <%= @emp.last_name%></p>
                    <p class="lead"><strong> Email :</strong> <%= @emp.email%></p>
                    <p class="lead"><strong> Phone No :</strong> <%= @emp.phone%></p>
                </div>
            </div>

            <%= link_to "Back to Employees", emps_path, class: "btn btn-outline-primary"%>
            <%= link_to "Edit Employee", edit_emp_path(@emp), class: "btn btn-primary"%>

        </div>
    </div>
</div>