<%= flash[:notice] %>
<div class="container card mt-5 mb-5">
    <div class="card-body">
        <h2 class="text-center"> Listing Employee </h2>
    </div>
</div>

<div class="container">
    <%= link_to "Create new Employee", new_emp_path, class:" btn btn-primary mb-4 "%>
</div>
<table class="container table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        <% @emps.each do |emp| %>
            <tr>
                <td><%= emp.first_name %></td>
                <td><%= emp.middle_name %></td>
                <td><%= emp.last_name %></td>
                <td><%= emp.email %></td>
                <td><%= emp.phone %></td>
                <td>
                    <%= link_to "Edit", edit_emp_path(emp), class: "btn btn-primary" %>
                    <%= link_to "View", emp_path(emp), class: "btn btn-info" %>
                
                    <%= link_to "Delete", emp_path(emp), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure to delete this employee'} %>
                </td>
            </tr>
        <% end %>

    </tbody>
</table>