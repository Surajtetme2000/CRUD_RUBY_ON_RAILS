<div class="col-lg-12">
    <div class="container card mt-5 mb-5">
        <div class="card-body">
            <h2 class="text-center"> Document Details</h2>
            <div class="row">
                <div class="col-lg-6">
                    <%# <h3 class="text-center">Personal Information</h3> %>
                    <% if @document.image.attached? %>
                        <%= image_tag @document.image %>
                    <% end %>
                    <p class="lead"><strong> Name :</strong> <%= @document.name%></p>
                    <p class="lead"><strong> Document type  :</strong> <%= @document.doc_type %></p>
                </div>
            </div>

            <%= link_to "Back to Documents", documents_path, class: "btn btn-outline-primary"%>
            <%= link_to "Edit Document", edit_document_path(@document), class: "btn btn-primary"%>

        </div>
    </div>
</div>