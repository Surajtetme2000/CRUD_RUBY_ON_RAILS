<div class="col-lg-12">

    <div class="container card mt-5 mb-5">
        <div class="card-body">
            <h2 class="text-center"> Edit Document </h2>
        </div>
    </div>

    <%= form_with model: @document do |form| %>
    <div class="row container">
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :name, class: 'mb-2' %>
                <%= form.text_field :name, class: 'form-control form-control-lg'%>
            </div>
            <div class="form-group">
                <%= form.label :doc_type, class: 'mb-2' %>
                <%= form.text_field :doc_type, class: 'form-control form-control-lg'%>
            </div>
            <div class="form-group">
                <%= form.label :emp_id, class: 'mb-2' %>
                <%= form.number_field :emp_id, class: 'form-control form-control-lg'%>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 m-5">
                <%= form.submit class: 'btn btn-primary' %>
                <%= link_to "Back to Document", documents_path, class: "btn btn-outline-primary" %>
            </div>
        </div>
    </div>
    <% end %>




</div>